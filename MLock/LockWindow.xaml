<Window x:Class="MLock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Topmost="True"
        Visibility="Hidden"
        WindowStyle="None"
        Background="White"
        WindowState="Maximized"
        Title="MLock">
    <Grid>
        <Canvas Name="BackgroundGrid" />

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>

            <TextBlock Name="PasswordBlock" FontSize="40" TextAlignment="Center" HorizontalAlignment="Center"
                       Grid.Row="1"
                       VerticalAlignment="Center" Foreground="LightGray" Text="Enter Password" />

        </Grid>
    </Grid>

</Window>